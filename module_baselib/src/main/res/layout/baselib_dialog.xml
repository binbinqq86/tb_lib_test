<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/baselib_shape_grey_round"
              android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/baselib_dp80"
        android:orientation="vertical"
        android:paddingBottom="@dimen/baselib_dp30"
        android:paddingLeft="@dimen/baselib_dp16"
        android:paddingRight="@dimen/baselib_dp16"
        android:paddingTop="@dimen/baselib_dp30">
        
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/baselib_dp15"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="TITLE"
            android:textColor="#333333"
            android:textSize="@dimen/baselib_sp18"
            android:visibility="visible"/>
        
        <LinearLayout
            android:id="@+id/dialog_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:text="CONTENT"
                android:textColor="#333333"
                android:textSize="@dimen/baselib_sp16"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/baselib_dp1"
        android:background="#F1F1F1"/>
    
    <LinearLayout
        android:id="@+id/two_button_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baselib_dp48"
        android:orientation="horizontal"
        android:visibility="visible">
        
        <Button
            android:id="@+id/dialog_left_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="Button"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/baselib_sp14"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/v_bottom_split"
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:background="#F1F1F1"
            android:visibility="gone"/>
        
        <Button
            android:id="@+id/dialog_right_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="Button"
            android:textColor="#fd5729"
            android:textSize="@dimen/baselib_sp14"
            android:visibility="gone"/>
    </LinearLayout>
    <!--<Button
        android:id="@+id/dialog_single_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp43.5"
        android:layout_weight="1"
        android:background="#00000000"
        android:gravity="center"
        android:text="Button"
        android:visibility="gone"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="@dimen/sp14" />-->

</LinearLayout>
