<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/baselib_iv_loading_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/baselib_tv_loading_error"
        android:layout_centerHorizontal="true"/>
    
    <TextView
        android:id="@id/baselib_tv_loading_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/baselib_dp10"
        android:text="@string/baselib_loading_error"/>
    
    <Button
        android:id="@+id/baselib_bt_loading_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/baselib_tv_loading_error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/baselib_dp10"
        android:text="@string/baselib_loading_retry"/>
</RelativeLayout>
