<resources>

    <!-- Base application theme. -->
    <style name="baselib_AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/baselib_colorPrimary</item>
        <item name="colorPrimaryDark">@color/baselib_colorPrimaryDark</item>
        <item name="colorAccent">@color/baselib_colorAccent</item>
    </style>
    
    <style name="baselib_progressLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
</resources>
